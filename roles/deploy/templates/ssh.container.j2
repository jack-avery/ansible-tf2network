[Unit]
Description=ansible-tf2network: ssh-{{ network_shortname }}

[Container]
ContainerName=ssh-{{ network_shortname }}
Image=kroniak/ssh-client

Network=net-{{ network_shortname }}.network

Volume=/home/tf2server/.ssh/sbpp_key_{{ network_shortname }}:/root/id_rsa

Exec=ssh -4NTCp {{ sbpp_host_ssh_port }} -i /root/id_rsa -o StrictHostKeyChecking=no -o ServerAliveInterval=60 -o ExitOnForwardFailure=yes -L 0.0.0.0:3306:db:3306 sbpp_user@{{ sbpp_host }}

[Service]
Restart=always

[Install]
WantedBy=default.target
