bash ./srcds_run -console \
  -strictportbind \
  -usercon \
  -secured \
  -port "{{ srcds_base_port + (loop0 * srcds_reserve_ports) }}" \
  +maxplayers {{ item.0.maxplayers|default(24) }} \
